<p id="notice"><%= notice %></p>

<h1 class="text-center text-primary font-weight-bold h1">Customers</h1>

<div class="py-3">
  <%= link_to 'Create customer', new_customer_path, class: "btn btn-info" %>
</div>

<div class="pb-3">
  <%= form_tag({controller: "customers", action: "index"}, method: :get) do %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag "Buscar", :q => nil %>
  <% end %>
</div>

<table class= "table table-dark">
  <thead>
    <tr>
      <th>Rut</th>
      <th>name</th>
      <th>Businessline</th>
      <th>Address</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody id="cust-table">
          <%= render partial: "customer", locals: { customers: @customers}%> 
    </tbody>
</table>

<br>

  <div id="paginate">
    <%= paginate @customers, remote: true %>
  </div>
